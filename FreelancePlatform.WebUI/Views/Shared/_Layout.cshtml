<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Freelance Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            margin-right: 15px;
            transition: color 0.2s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #0d6efd;
            }

        .btn-primary {
            border-radius: 30px;
            padding: 6px 18px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        footer {
            background-color: #212529;
            color: #fff;
            padding: 15px 0;
            margin-top: 50px;
        }

            footer a {
                color: #adb5bd;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" href="/">
                    <i class="fa-solid fa-briefcase"></i> FreelancePlatform
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/Project">Projeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Categories">Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Messages">Mesajlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-primary btn-sm" href="/Auth/Register">Kayıt Ol</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center">
        © @DateTime.Now.Year FreelancePlatform | <a href="#">İletişim</a> | <a href="#">Gizlilik Politikası</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
