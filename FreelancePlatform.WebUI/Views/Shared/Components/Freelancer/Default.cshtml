@model List<FreelancePlatform.Core.DTOs.UserDtos.ResultUserDto>

<section class="freelancer-list-section py-5" style="background: linear-gradient(to right, #f8f9fa, #edf1f5);">
    <div class="container">
        <h2 class="fw-bold display-6 mb-2"><i class="bi bi-stars text-warning me-2"></i> En Sevilen <span class="text-primary">Freelancerlar</span> 🥰</h2>
        <p class="text-muted mb-5">En çok tercih edilen freelancerlarımızla tanışın.</p>

        <div class="d-flex overflow-auto gap-4 pb-2">
            @foreach (var user in Model.Take(10))
            {
                <div class="flex-shrink-0 bg-white rounded-4 shadow-sm text-center p-4" style="width: 240px;">
                    <div class="mb-3">
                        <img src="@user.ProfileImageUrl" class="rounded-circle border object-fit-cover" style="width: 80px; height: 80px;" alt="@user.FirstName @user.LastName">
                    </div>
                    <h6 class="fw-bold text-dark mb-1">@user.FirstName @user.LastName</h6>
                    <p class="text-muted small mb-2">@user.Email</p>
                    <span class="badge bg-primary-subtle text-primary small mb-2">Üyelik: @user.CreatedAt.ToString("dd.MM.yyyy")</span>
                    <div class="d-flex justify-content-between mt-3 gap-2">
                        <a href="/Users/Index/@user.Id" class="btn btn-sm btn-outline-primary w-50 rounded-pill">Profil</a>
                        <a href="/Messages/Send?userId=@user.Id" class="btn btn-sm btn-outline-dark w-50 rounded-pill">Mesaj</a>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a href="/Users" class="btn btn-outline-dark rounded-pill px-4">
                <i class="bi bi-people"></i> Tüm Freelancerları Gör
            </a>
        </div>
    </div>
</section>

<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .freelancer-list-section .overflow-auto::-webkit-scrollbar {
        height: 6px;
    }

    .freelancer-list-section .overflow-auto::-webkit-scrollbar-thumb {
        background-color: #dee2e6;
        border-radius: 10px;
    }

    .freelancer-list-section .overflow-auto::-webkit-scrollbar-track {
        background-color: transparent;
    }

    .freelancer-list-section .btn:hover {
        transform: scale(1.02);
        transition: 0.2s;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">