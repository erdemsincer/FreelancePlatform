@model List<FreelancePlatform.Core.DTOs.ProjectDtos.ResultProjectDto>

<section class="bg-white border rounded-4 p-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-dark">Portfolyosu <span class="badge bg-danger">Yeni</span></h4>
        <a href="/FreelancerPortfolio/Index" class="text-success fw-semibold text-decoration-none">Portfolyoyu Görüntüle</a>
    </div>

    <div class="d-flex gap-3 overflow-auto portfolio-scroll pb-2">
        @foreach (var project in Model)
        {
            <div class="card border-0 shadow-sm rounded-4 px-3 py-3" style="min-width: 300px;">
                <div class="d-flex flex-column h-100">
                    <div>
                        <h6 class="fw-bold text-primary mb-1">
                            <i class="bi bi-briefcase-fill me-1"></i> @project.Title
                        </h6>
                        <p class="text-muted small mb-2">
                            @project.Description.Substring(0, Math.Min(80, project.Description.Length))...
                        </p>
                    </div>
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success-subtle text-success fw-medium border">
                                <i class="bi bi-cash-coin me-1"></i> @project.Budget ₺
                            </span>
                            <small class="text-muted">@project.CreatedAt.ToString("dd.MM.yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .portfolio-scroll::-webkit-scrollbar {
        height: 6px;
    }

    .portfolio-scroll::-webkit-scrollbar-thumb {
        background-color: #ced4da;
        border-radius: 10px;
    }

    .portfolio-scroll {
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: thin;
        margin-top: 1rem;
    }

        .portfolio-scroll .card {
            scroll-snap-align: start;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

            .portfolio-scroll .card:hover {
                transform: translateY(-5px);
            }

    .card-img-top {
        font-size: 1.1rem;
        color: #444;
        height: 150px;
        background-color: #f1f1f1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }

    .card-body h6 {
        font-size: 1rem;
        color: #343a40;
        margin-bottom: 1rem;
    }

    .card-body p {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .text-success {
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>
