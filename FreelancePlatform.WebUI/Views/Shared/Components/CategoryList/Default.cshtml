@model List<FreelancePlatform.Core.DTOs.CategoryDtos.ResultCategoryDto>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold mb-4">En Popüler <span class="text-primary">Kategoriler</span> 🤩</h2>

        <div class="d-flex overflow-auto gap-3 pb-3 px-1">
            @foreach (var category in Model.Take(10))
            {
                <div class="flex-shrink-0 rounded-4 shadow-sm p-4 bg-white" style="min-width: 220px; max-width: 220px;">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-folder-fill text-warning me-2"></i>
                        <h6 class="mb-0 fw-bold">@category.Name</h6>
                    </div>
                    <p class="text-muted small">
                        @category.Description?.Substring(0, Math.Min(category.Description.Length, 70))...
                    </p>
                    <span class="badge bg-primary-subtle text-primary fw-medium">freelancer hizmet veriyor</span>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .overflow-auto::-webkit-scrollbar {
        height: 6px;
    }

    .overflow-auto::-webkit-scrollbar-thumb {
        background-color: #dee2e6;
        border-radius: 10px;
    }

    .overflow-auto::-webkit-scrollbar-track {
        background-color: transparent;
    }

    .badge {
        font-size: 0.75rem;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">