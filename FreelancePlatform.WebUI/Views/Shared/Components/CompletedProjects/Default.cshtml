@model List<FreelancePlatform.Core.DTOs.ProjectDtos.ResultProjectDto>

@if (Model.Any())
{
    <section class="py-5" style="background: linear-gradient(to right, #f5f9ff, #e1ecf4);">
        <div class="container">
            <h3 class="fw-bold mb-5 text-center text-success">
                <i class="bi bi-check-circle-fill me-2"></i> Tamamlanan Projeler
            </h3>
            <div class="row g-4">
                @foreach (var project in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-lg border-0 rounded-4 hover-shadow">
                            <div class="card-header bg-primary text-white rounded-top-4">
                                <h5 class="fw-bold mb-0">@project.Title</h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-folder-fill me-1"></i> Kategori: @project.CategoryName
                                </p>
                                <p class="text-muted small">Tamamlanma Tarihi: @project.CreatedAt.ToString("dd.MM.yyyy")</p>
                                <span class="badge bg-success mb-3">Tamamlandı</span>
                                <p class="text-muted small flex-grow-1">@project.Description.Substring(0, Math.Min(100, project.Description.Length))...</p>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <a href="/Project/Detail/@project.Id" class="btn btn-outline-primary btn-sm rounded-pill w-100">
                                        Detayları Gör
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
