@model List<FreelancePlatform.Core.DTOs.AdvertisementDtos.ResultAdvertisementDto>

<section class="bg-white border rounded-4 p-4 mb-5">
    <h4 class="fw-bold mb-4 text-dark">
        <span class="text-danger">@Model.FirstOrDefault()?.FreelancerFullName</span> Kullanıcısının Verdiği Hizmetler
    </h4>

    <div class="d-flex gap-3 overflow-auto user-ads-scroll pb-2">
        @foreach (var ad in Model)
        {
            <div class="card shadow-sm border-0 rounded-4" style="min-width: 300px;">
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center rounded-top-4" style="height: 150px;">
                    <span class="fw-bold text-primary">@ad.Title</span>
                </div>
                <div class="card-body d-flex flex-column">
                    <h6 class="fw-bold text-dark mb-1">@ad.FreelancerFullName</h6>
                    <p class="text-muted small mb-2">Kategori: @ad.CategoryName</p>
                    <p class="text-dark small flex-grow-1">@ad.Description.Substring(0, Math.Min(ad.Description.Length, 80))...</p>

                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="text-success fw-bold fs-5">@ad.Price.ToString("N0") TL</span>
                        <a href="/Advertisement/Detail/@ad.Id" class="btn btn-outline-primary btn-sm rounded-pill">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .card-img-top {
        font-size: 1.1rem;
        color: #444;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }

    .user-ads-scroll::-webkit-scrollbar {
        height: 6px;
    }

    .user-ads-scroll::-webkit-scrollbar-thumb {
        background-color: #ced4da;
        border-radius: 10px;
    }

    .user-ads-scroll {
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: thin;
    }

        .user-ads-scroll .card {
            scroll-snap-align: start;
        }
</style>
