@model FreelancePlatform.Core.DTOs.ProjectDtos.ResultProjectDto
@{
    ViewData["Title"] = "Proje Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-gradient p-4 text-white rounded-top-4" style="background: linear-gradient(90deg, #0d6efd, #4dabf7);">
                        <h2 class="mb-0 fw-bold">@Model.Title</h2>
                        <p class="small mt-1">Kategori: <strong>@Model.CategoryName</strong></p>
                    </div>
                    <div class="card-body p-5">
                        <h5 class="fw-bold mb-3">Proje Açıklaması</h5>
                        <p class="text-muted fs-6">@Model.Description</p>

                        <div class="row mt-4 mb-4">
                            <div class="col-md-6">
                                <p><i class="bi bi-person-circle me-1"></i> <strong>İşveren:</strong> @Model.EmployerFullName</p>
                                <p><i class="bi bi-calendar-date me-1"></i> <strong>Yayın Tarihi:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")</p>
                                @if (Model.Deadline != null)
                                {
                                    <p><i class="bi bi-hourglass-split me-1"></i> <strong>Son Teslim:</strong> <span class="text-danger">@Model.Deadline?.ToString("dd.MM.yyyy")</span></p>
                                }
                            </div>
                            <div class="col-md-6">
                                <p><i class="bi bi-cash me-1"></i> <strong>Bütçe:</strong> <span class="text-success fw-bold">@Model.Budget ₺</span></p>
                                <p><i class="bi bi-flag-fill me-1"></i> <strong>Durum:</strong> <span class="badge bg-@(Model.Status == "Açık" ? "primary" : "secondary")">@Model.Status</span></p>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-3">
                            @if (Model.Status == "Açık")
                            {
                                <a href="/Bid/Create/@Model.Id" class="btn btn-success btn-lg rounded-pill px-4 shadow">
                                    <i class="bi bi-rocket-takeoff me-2"></i> Hemen Teklif Ver
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-lg rounded-pill px-4 shadow" disabled>
                                    <i class="bi bi-lock-fill me-2"></i> Proje Kapalı
                                </button>
                            }

                            <a href="/Project" class="btn btn-outline-dark btn-lg rounded-pill px-4">
                                <i class="bi bi-arrow-left me-1"></i> Geri Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .card-header h2 {
        font-size: 1.8rem;
    }

    .btn-success {
        background: linear-gradient(90deg, #198754, #20c997);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(90deg, #157347, #198754);
        }
</style>