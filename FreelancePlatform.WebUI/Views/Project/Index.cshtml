@{
    ViewData["Title"] = "Tüm Projeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<FreelancePlatform.Core.DTOs.ProjectDtos.ResultProjectDto>

<section class="projects-list-section text-center py-5" style="background-color: #f9fbfd;">
    <div class="container">
        <h2 class="fw-bold mb-5 display-6">Tüm <span class="text-primary">Projeler</span></h2>

        <div class="row g-4">
            @foreach (var project in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card project-card h-100 shadow-sm border-0 rounded-4 position-relative overflow-hidden">
                        <div class="card-body text-start p-4">
                            <h5 class="fw-bold text-dark">@project.Title</h5>
                            <p class="text-muted small mb-1">Kategori: <strong>@project.CategoryName</strong></p>
                            <p class="text-muted small mb-2">İşveren: <i class="bi bi-person-circle"></i> @project.EmployerFullName</p>
                            <p class="text-secondary small">
                                @(
                                    project.Description.Length > 120
                                    ? project.Description.Substring(0, 120) + "..."
                                    : project.Description
                                    )
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fw-bold text-success">₺ @project.Budget</span>
                                <span class="badge bg-primary">@project.Status</span>
                            </div>
                            <p class="text-muted mt-2 small"><i class="bi bi-calendar-event"></i> Yayın: @project.CreatedAt.ToString("dd.MM.yyyy")</p>
                            @if (project.Deadline != null)
                            {
                                <p class="text-danger small"><i class="bi bi-clock"></i> Son Teslim: @project.Deadline?.ToString("dd.MM.yyyy")</p>
                            }
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between p-3">
                            <a href="/Project/Detail/@project.Id" class="btn btn-outline-primary btn-sm w-50 rounded-pill">Detayları Gör</a>

                            @if (project.Status != "Alındı")
                            {
                                <a asp-controller="Bid" asp-action="Create" asp-route-projectId="@project.Id" class="btn btn-success btn-sm w-50 rounded-pill">Teklif Ver</a>
                            }
                            else
                            {
                                <span class="badge bg-secondary w-50 text-center p-2">Proje Alındı</span>
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
            .projects-list-section {
            background: linear-gradient(145deg, #f0f4fa, #f9fbfd);

        }

        .project-card {
        transition: all 0.3s ease-in-out;
        border-radius: 20px;
        }

        .project-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .project-card h5 {
        color: #212529;
        font-size: 1.25rem;
    }

    .project-card .btn {
        font-size: 0.85rem;
        font-weight: 500;
        }

        .project-card .badge {
            font-size: 0.75rem;
            padding: 5px 10px;
        }

        .project-card .card-footer {
            background-color: transparent;
        }

   
</style>
