@model FreelancePlatform.Core.DTOs.AuthDtos.RegisterRequestDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row border rounded-5 p-4 bg-white shadow-lg box-area" style="width: 420px;">

        <div class="text-center mb-4">
            <h3 class="fw-bold">Kayıt Ol</h3>
            <p class="text-muted small">Projelere teklif vermek için hemen kaydol!</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post" class="needs-validation" novalidate>
            <div class="form-group mb-3">
                <label class="form-label fw-semibold">Ad</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-person-fill text-secondary"></i></span>
                    <input asp-for="FirstName" class="form-control" placeholder="Adınız" required />
                </div>
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-semibold">Soyad</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-person-lines-fill text-secondary"></i></span>
                    <input asp-for="LastName" class="form-control" placeholder="Soyadınız" required />
                </div>
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-semibold">E-Posta</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-envelope-fill text-secondary"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" required />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill text-secondary"></i></span>
                    <input asp-for="Password" class="form-control" id="password" placeholder="••••••••" required type="password" />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password')">
                        <i class="bi bi-eye-slash"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg rounded-3">Kayıt Ol</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">Zaten hesabın var mı? <a href="/Auth/Login" class="text-primary text-decoration-none">Giriş Yap</a></small>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #e0eafc, #cfdef3);
    }

    .box-area {
        animation: fadeIn 0.6s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    input:focus {
        box-shadow: 0 0 5px #0d6efd;
    }
</style>

@section Scripts {
    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            }
        }
    </script>
}
