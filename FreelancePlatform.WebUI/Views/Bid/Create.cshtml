@model FreelancePlatform.Core.DTOs.BidDtos.CreateBidDto

@{
    ViewData["Title"] = "Teklif Ver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
            <h3 class="mb-0">💼 Teklif Ver</h3>
        </div>
        <div class="card-body p-5">
            <form asp-action="Create" method="post">
                <input type="hidden" name="ProjectId" value="@Model.ProjectId" />

                <div class="mb-4">
                    <label asp-for="OfferAmount" class="form-label fw-semibold">💰 Teklif Tutarı</label>
                    <input asp-for="OfferAmount" class="form-control form-control-lg" placeholder="₺ Örneğin: 2500" />
                    <span asp-validation-for="OfferAmount" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Message" class="form-label fw-semibold">✉️ Mesajınız</label>
                    <textarea asp-for="Message" class="form-control form-control-lg" rows="5" placeholder="Proje için neden en uygun kişi olduğunuzu anlatın..."></textarea>
                    <span asp-validation-for="Message" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg px-5">
                        <i class="bi bi-send-check-fill me-2"></i> Teklif Gönder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
