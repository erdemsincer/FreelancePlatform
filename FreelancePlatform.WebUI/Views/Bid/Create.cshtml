@model FreelancePlatform.Core.DTOs.BidDtos.CreateBidDto
@{
    ViewData["Title"] = "Teklif Ver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-gradient text-white p-4 rounded-top-4" style="background: linear-gradient(90deg, #198754, #20c997);">
                        <h3 class="mb-0 fw-bold"><i class="bi bi-rocket-takeoff me-2"></i> Teklif Ver</h3>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Create" method="post">
                            <input type="hidden" asp-for="ProjectId" />
                            <input type="hidden" asp-for="FreelancerId" />

                            <div class="form-group mb-4">
                                <label asp-for="OfferAmount" class="form-label fw-semibold">Teklif Tutarı (₺)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-currency-exchange"></i></span>
                                    <input asp-for="OfferAmount" class="form-control" placeholder="Ornek: 15000" />
                                </div>
                                <span asp-validation-for="OfferAmount" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Message" class="form-label fw-semibold">Mesajınız</label>
                                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Proje için neden en uygun kişi olduğunuzu anlatın..."></textarea>
                                <span asp-validation-for="Message" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/Project/Detail/@Model.ProjectId" class="btn btn-outline-secondary rounded-pill px-4">
                                    <i class="bi bi-arrow-left"></i> Geri Dön
                                </a>
                                <button type="submit" class="btn btn-success rounded-pill px-5">
                                    <i class="bi bi-send-plus me-1"></i> Teklifi Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(32, 201, 151, 0.25);
        border-color: #20c997;
    }
</style>