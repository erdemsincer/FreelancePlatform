@model List<FreelancePlatform.Core.DTOs.BidDtos.ResultBidWithProjectDto>
@{
    ViewData["Title"] = "Aktif Projelerim";
    Layout = "~/Areas/Freelancer/Views/FreelancerLayout/Index.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-center mb-5">
            <i class="bi bi-briefcase-fill text-primary me-2"></i> Kabul Edilmiş <span class="text-success">Projelerim</span>
        </h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center shadow-sm rounded-4 py-4">
                <i class="bi bi-info-circle me-2"></i> Henüz kabul edilmiş bir projeniz bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var project in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 rounded-4 project-card">
                            <div class="card-body d-flex flex-column">
                                <h5 class="fw-bold text-primary mb-2">@project.ProjectTitle</h5>
                                <p class="text-muted small">@project.Message</p>
                                <div class="mt-auto">
                                    <span class="badge bg-@(project.ProjectStatus == "Alındı" ? "success" : "secondary") mb-3">
                                        <i class="bi bi-check-circle me-1"></i> @project.ProjectStatus
                                    </span>
                                    <a asp-area="Freelancer" asp-controller="ProjectTask" asp-action="Index" asp-route-projectId="@project.ProjectId"
                                       class="btn btn-outline-primary btn-sm w-100 rounded-pill">
                                        <i class="bi bi-kanban me-1"></i> Görevleri Görüntüle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- Stil -->
<style>
    .project-card:hover {
        transform: translateY(-4px);
        transition: all 0.3s ease-in-out;
    }

    .card-body {
        padding: 1.5rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: #fff;
    }
</style>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
