@model List<FreelancePlatform.Core.DTOs.BidDtos.ResultBidWithProjectDto>
@{
    ViewData["Title"] = "Tekliflerim";
    Layout = "~/Areas/Freelancer/Views/FreelancerLayout/Index.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Yaptığınız Tüm Teklifler</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Henüz bir teklifte bulunmadınız.</div>
    }
    else
    {
        <table class="table table-bordered table-hover text-center align-middle shadow">
            <thead class="table-dark">
                <tr>
                    <th>📌 Proje</th>
                    <th>💰 Tutar</th>
                    <th>📝 Mesaj</th>
                    <th>📅 Tarih</th>
                    <th>📦 Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bid in Model)
                {
                    <tr>
                        <td>@bid.ProjectTitle</td>
                        <td>@bid.OfferAmount ₺</td>
                        <td class="text-truncate" style="max-width: 300px;">@bid.Message</td>
                        <td>@bid.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            @switch (bid.ProjectStatus)
                            {
                                case "Kabul Edildi":
                                case "Alındı":
                                    <span class="badge bg-success">Kabul Edildi</span>
                                    ;
                                    break;
                                case "Tamamlandı":
                                    <span class="badge bg-secondary">Tamamlandı</span>
                                    ;
                                    break;
                                default:
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                    ;
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
