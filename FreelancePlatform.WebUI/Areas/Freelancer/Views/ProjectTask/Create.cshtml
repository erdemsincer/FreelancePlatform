@model FreelancePlatform.Core.DTOs.ProjectTaskDtos.CreateProjectTaskDto
@{
    ViewData["Title"] = "Yeni Görev Ekle";
    Layout = "~/Areas/Freelancer/Views/FreelancerLayout/Index.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white p-4 rounded-top-4">
                        <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Yeni Görev Oluştur</h4>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Create" method="post">
                            <input type="hidden" asp-for="ProjectId" />

                            <div class="form-group mb-4">
                                <label asp-for="Title" class="form-label fw-semibold">Görev Başlığı</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-clipboard-check"></i></span>
                                    <input asp-for="Title" class="form-control" placeholder="Örn: Frontend düzenlemesi" required />
                                </div>
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Description" class="form-label fw-semibold">Görev Açıklaması</label>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Bu görevde yapılması gerekenleri detaylıca açıklayın..." required></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Status" class="form-label fw-semibold">Durum</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="ToDo">🕓 To Do</option>
                                    <option value="InProgress">🔄 In Progress</option>
                                    <option value="Done">✅ Done</option>
                                </select>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-success px-5 rounded-pill">
                                    <i class="bi bi-plus-circle-fill me-2"></i>Görev Ekle
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .form-control:focus, .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }

    .input-group-text {
        background-color: #e9ecef;
    }
</style>
