@model List<FreelancePlatform.Core.DTOs.BidDtos.ResultBidWithProjectDto>
@{
    ViewData["Title"] = "Kabul Edilen Projelerim";
    Layout = "~/Areas/Freelancer/Views/FreelancerLayout/Index.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-center mb-5 text-primary">
            <i class="bi bi-clipboard-check-fill me-2"></i> Kabul Edilen Projelerim
        </h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center rounded-4 shadow-sm py-4">
                <i class="bi bi-info-circle me-2"></i> Henüz kabul edilen bir projeniz bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var project in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow border-0 rounded-4">
                            <div class="card-body d-flex flex-column p-4">
                                <h5 class="fw-bold text-dark mb-2">@project.ProjectTitle</h5>
                                <p class="text-muted small flex-grow-1">@project.Message</p>

                                <div class="mt-3">
                                    <span class="badge bg-success mb-3 px-3 py-2 rounded-pill">
                                        <i class="bi bi-check2-circle me-1"></i> @project.ProjectStatus
                                    </span>

                                    <a asp-area="Freelancer"
                                       asp-controller="ProjectTask"
                                       asp-action="Index"
                                       asp-route-projectId="@project.ProjectId"
                                       class="btn btn-outline-primary btn-sm w-100 rounded-pill">
                                        <i class="bi bi-kanban-fill me-1"></i> Görevleri Görüntüle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<style>
    .card:hover {
        transform: translateY(-3px);
        transition: all 0.3s ease-in-out;
    }

    .badge {
        font-size: 0.85rem;
    }
</style>
