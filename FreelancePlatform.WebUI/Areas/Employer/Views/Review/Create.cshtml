@using FreelancePlatform.Core.DTOs.ReviewDtos
@model CreateReviewDto
@{
    
    Layout = "~/Areas/Employer/Views/EmployerLayout/Index.cshtml";
}

<section class="py-5" style="background: linear-gradient(to right, #f8f9fa, #e9ecef);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header bg-primary text-white rounded-top-4 p-4 text-center">
                        <h4 class="mb-0 fw-bold">
                            <i class="bi bi-star-fill me-2"></i> Freelancer’ı Değerlendir
                        </h4>
                        <small class="d-block mt-1 text-light">Çalışma deneyiminizi puanlayın ve yorumunuzu paylaşın.</small>
                    </div>

                    <div class="card-body p-5">
                        <form asp-action="Create" method="post">
                            <input type="text" asp-for="ProjectId" />
                            <input type="text" asp-for="ReviewerId" />
                            <input type="text" asp-for="RevieweeId" />

                            <div class="mb-4">
                                <label asp-for="Rating" class="form-label fw-semibold">
                                    <i class="bi bi-star me-1 text-warning"></i> Puan (1-5)
                                </label>
                                <select asp-for="Rating" class="form-select form-select-lg rounded-pill">
                                    <option value="1">⭐ 1 - Kötü</option>
                                    <option value="2">⭐⭐ 2 - Zayıf</option>
                                    <option value="3">⭐⭐⭐ 3 - Orta</option>
                                    <option value="4">⭐⭐⭐⭐ 4 - İyi</option>
                                    <option value="5">⭐⭐⭐⭐⭐ 5 - Harika</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Comment" class="form-label fw-semibold">
                                    <i class="bi bi-chat-dots me-1 text-info"></i> Yorumunuz
                                </label>
                                <textarea asp-for="Comment" class="form-control rounded-3" rows="5"
                                          placeholder="Freelancer hakkında düşüncelerinizi yazın..."></textarea>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-success px-5 py-2 rounded-pill shadow-sm fw-semibold">
                                    <i class="bi bi-send-plus me-1"></i> Değerlendirmeyi Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    textarea::placeholder {
        font-style: italic;
        color: #adb5bd;
    }

    .form-select-lg {
        font-size: 1rem;
        padding: 0.75rem 1.25rem;
    }

    .btn-success:hover {
        background-color: #198754;
        transform: scale(1.03);
        transition: all 0.3s;
    }
</style>
